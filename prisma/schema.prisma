generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  relationMode         = "prisma"
}

model User {
  id       String @id
  username String

  guildMembers GuildMember[]
}

model Guild {
  id   String @id
  name String

  guildMembers  GuildMember[]
  voiceChannels VoiceChannel[]
}

model GuildMember {
  guildID      String
  userID       String
  joinedAt     DateTime
  nickname     String?
  avatarURL    String?
  hoursActive  Float    @default(0)
  messagesSent Int      @default(0)

  user  User  @relation(fields: [userID], references: [id])
  @@index([userID])
  guild Guild @relation(fields: [guildID], references: [id])
  @@index([guildID])

  @@id([guildID, userID])
}

model VoiceChannel {
  id          String @id
  name        String
  connections Int    @default(0)

  guildID String

  guild   Guild  @relation(fields: [guildID], references: [id])
  @@index([guildID])
}
